import json
from drone import Drone
from delivery import Delivery
from noflyzone import NoFlyZone
from src.modules.astar import a_star_yolu_bul, is_gecerli_teslimat, rota_gorsellestir
from genetic import genetic_algorithm

# JSON'dan verileri yÃ¼kle
with open("data/veri.json", "r") as f:
    data = json.load(f)

# Nesne listelerini oluÅŸtur
drones = [Drone(**{**d, "start_pos": tuple(d["start_pos"])}) for d in data["drones"]]
deliveries = [Delivery(**{**d, "pos": tuple(d["pos"])}) for d in data["deliveries"]]
no_fly_zones = [
    NoFlyZone(
        id=z["id"],
        coordinates=[tuple(coord) for coord in z["coordinates"]],
        active_time=tuple(z["active_time"])
    )
    for z in data["no_fly_zones"]
]

# Saat (CSP ve A* iÃ§in)
zaman_str = "09:45"

# ğŸ” Bireysel A* ve CSP Testi (ilk drone ve teslimat)
print("\nğŸ” Bireysel A* ve CSP Testi")
drone = drones[0]
delivery = deliveries[0]
print(f"ğŸ“¦ Teslimat: {delivery.pos}, ğŸ›©ï¸ BaÅŸlangÄ±Ã§: {drone.start_pos}")

# A* algoritmasÄ±yla yol bul
yol = a_star_yolu_bul(
    start=drone.start_pos,
    goal=delivery.pos,
    weight=delivery.weight,
    priority=delivery.priority,
    no_fly_zones=[z.__dict__ for z in no_fly_zones],  # HATA BURADA DÃœZELTÄ°LDÄ°
    zaman_str=zaman_str
)

# SonuÃ§larÄ± deÄŸerlendir
if yol:
    print("ğŸš€ A* ile yol bulundu:", yol)

    uygun, mesaj = is_gecerli_teslimat(
        drone, delivery, [z.__dict__ for z in no_fly_zones], zaman_str, yol
    )
    print("âœ… CSP sonucu:", mesaj)

    # Yolun gÃ¶rselleÅŸtirilmesi
    rota_gorsellestir(yol, [z.__dict__ for z in no_fly_zones])
else:
    print("âŒ A* algoritmasÄ± yol bulamadÄ±")

# ğŸ§¬ Genetik Algoritma Ã§alÄ±ÅŸtÄ±r
def run_genetik():
    print("\nğŸ§¬ Genetik Algoritma Ã‡alÄ±ÅŸtÄ±rÄ±lÄ±yor...")
    cozum = genetic_algorithm(
        drones, deliveries, no_fly_zones, zaman_str,
        populasyon_boyutu=6,
        nesil_sayisi=8
    )

    print("\nğŸ¯ En iyi Ã§Ã¶zÃ¼mdeki gÃ¶rev daÄŸÄ±lÄ±mÄ±:")
    for drone_id, teslimatlar in cozum.items():
        print(f"Drone {drone_id} â†’ {len(teslimatlar)} teslimat")
        for t in teslimatlar:
            print(f"   - Teslimat ID: {t.id}, Konum: {t.pos}")

# Genetik algoritmayÄ± baÅŸlat
run_genetik()
